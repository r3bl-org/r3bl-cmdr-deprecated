{
  "name": "rc",
  "version": "0.0.1",
  "license": "Apache 2.0",
  "bin": "dist/cli.js",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start-dev": "node -r tsm src/cli.tsx",
    "/*start-dev-watch*/": "https://stackoverflow.com/a/28938235/2085356",
    "start-dev-watch": "nodemon --exitcrash -e ts,tsx --exec 'echo -e '\\033[0m' && clear && node -r tsm src/cli.tsx || exit 1'",
    "test": "jest",
    "test-watch": "jest --watch",
    "lint": "eslint 'src/**/*.{ts,tsx}' --quiet --fix",
    "build": "rm -rf dist/ && tsc && chmod +x dist/cli.js",
    "start": "node dist/cli.js",
    "start-watch-js": "nodemon --exitcrash -e ts,tsx,js,jsx --exec 'echo -e '\\033[0m' && clear && node dist/cli.js || exit 1'",
    "build-watch-js": "tsc --watch",
    "dev-js": "npm run build && npm-run-all -p -r build-watch-js start-watch-js",
    "flush-npm-cache": "rm package-lock.json && rm -rf node_modules/ && npm cache clean --force && npm i",
    "/*format-with-tsfmt*/": "https://github.com/vvakame/typescript-formatter",
    "format-with-tsfmt": "tsfmt -r",
    "/*experimental*/": "These scripts allow you to run experimental projects",
    "exp-template": "node -r tsm src/experimental/experiment-template.tsx",
    "exp-use-focus": "node -r tsm src/experimental/use-focus/example.tsx",
    "exp-dyn-require": "node -r tsm src/experimental/dynamic-import/using-require.ts",
    "exp-dyn-import": "node -r tsm src/experimental/dynamic-import/using-import.ts",
    "exp-ink-text-input-with-provider": "node -r tsm src/experimental/ink-text-input/example-with-provider.tsx",
    "exp-ink-confirm-input": "node -r tsm src/experimental/ink-confirm-input/example.tsx"
  },
  "files": [
    "dist/cli.js"
  ],
  "dependencies": {
    "commander": "^8.3.0",
    "ink": "^3.2.0",
    "ink-text-input": "^4.0.2",
    "r3bl-ts-utils": "^1.0.76",
    "react": "^17.0.2",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^2.0.0",
    "@types/jest": "latest",
    "@types/lodash": "latest",
    "@types/node": "latest",
    "@types/node-fetch": "latest",
    "@types/react": "^17.0.34",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "eslint": "latest",
    "eslint-plugin-react": "latest",
    "eslint-plugin-react-hooks": "latest",
    "ink-testing-library": "^2.1.0",
    "jest": "latest",
    "nodemon": "latest",
    "npm-run-all": "latest",
    "prettier": "latest",
    "ts-jest": "latest",
    "ts-node-dev": "latest",
    "tsm": "latest",
    "typescript": "latest",
    "typescript-formatter": "latest"
  }
}
